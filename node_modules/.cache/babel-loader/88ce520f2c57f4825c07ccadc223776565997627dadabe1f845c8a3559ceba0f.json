   </div>\r\n\r\n    <div class=\"container\">\r\n    <ul id=\"myUL\">\r\n      <li v-for=\"todo in todos\" :key=\"todo.id\" @click=\"openDetailsModal(todo)\">\r\n        <span :style=\"{ textDecoration: todo.completed ? 'line-through' : 'none' }\">\r\n          {{ todo.title }}\r\n        </span>\r\n        <div class=\"nav-right\">\r\n          <button v-if=\"!todo.completed\" class=\"btn btn-success btn-sm\" @click.stop=\"markComplete(todo.id)\">\r\n            <i class=\"fas fa-check\"></i>\r\n          </button>\r\n\r\n          <button v-if=\"todo.completed\" class=\"btn btn-success btn-sm completed\" @click.stop=\"markIncomplete(todo.id)\">\r\n            <i class=\"fas fa-check\"></i>\r\n          </button>\r\n\r\n          <button class=\"btn btn-danger btn-sm\" @click.stop=\"openDeleteModal(todo.id)\">\r\n            <i class=\"fas fa-close\"></i>\r\n          </button>\r\n        </div>\r\n      </li>\r\n    </ul>\r\n\r\n    <!-- Modal สำหรับแสดงรายละเอียด To-Do -->\r\n    <div class=\"modal\" v-if=\"showDetailsModal\" tabindex=\"-1\" role=\"dialog\" aria-labelledby=\"detailsModalLabel\" aria-hidden=\"true\">\r\n      <div class=\"modal-dialog\" role=\"document\">\r\n        <div class=\"modal-content\">\r\n          <div class=\"modal-header\">\r\n            <h5 class=\"modal-title\" id=\"detailsModalLabel\">To-Do Details</h5>\r\n            <button type=\"button\" class=\"close\" @click=\"closeDetailsModal\" aria-label=\"Close\">\r\n              <span aria-hidden=\"true\">&times;</span>\r\n            </button>\r\n          </div>\r\n          <div class=\"modal-body\">\r\n            <h6>Title:</h6>\r\n            <p>{{ selectedTodo.title }}</p>\r\n            <h6>Description:</h6>\r\n            <p>{{ selectedTodo.description }}</p>\r\n            <h6>Status:</h6>\r\n            <p>{{ selectedTodo.completed ? 'Completed' : 'Not Completed' }}</p>\r\n          </div>\r\n          <div class=\"modal-footer\">\r\n            <button type=\"button\" class=\"btn btn-secondary\" @click=\"closeDetailsModal\">Close</button>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      todos: [],\r\n      selectedTodo: {}, // เพื่อเก็บข้อมูล To-Do ที่เลือก\r\n      showDetailsModal: false, // ควบคุมการแสดงโมดอลรายละเอียด\r\n      showDeleteModal: false, // ควบคุมการแสดงโมดอลลบ\r\n      todoToDelete: null, // เก็บ ID ของ todo ที่จะลบ\r\n    };\r\n  },\r\n  methods: {\r\n    openDetailsModal(todo) {\r\n      this.selectedTodo = todo; // เก็บข้อมูล To-Do ที่เลือก\r\n      this.showDetailsModal = true; // แสดงโมดอลรายละเอียด\r\n    },\r\n    closeDetailsModal() {\r\n      this.showDetailsModal = false; // ปิดโมดอลรายละเอียด\r\n    },\r\n    async markComplete(id) {\r\n      // โค้ดสำหรับทำเครื่องหมาย To-Do ว่าเสร็จสิ้น\r\n    },\r\n    async markIncomplete(id) {\r\n      // โค้ดสำหรับทำเครื่องหมาย To-Do ว่าไม่เสร็จสิ้น\r\n    },\r\n    openDeleteModal(todoId) {\r\n      this.todoToDelete = todoId; // เก็บ ID ของ todo ที่จะลบ\r\n      this.showDeleteModal = true; // แสดงโมดอลลบ\r\n    },\r\n    closeDeleteModal() {\r\n      this.showDeleteModal = false; // ปิดโมดอลลบ\r\n      this.todoToDelete = null; // เคลียร์ ID\r\n    },\r\n    async confirmDelete() {\r\n      // โค้ดสำหรับลบ To-Do\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\n.modal {\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  background: rgba(0, 0, 0, 0.5); /* ทำให้พื้นหลังมืดขึ้น */\r\n}\r\n</style>"],"mappings":"AA+DA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,KAAK,EAAE,EAAE;MACTC,YAAY,EAAE,CAAC,CAAC;MAAE;MAClBC,gBAAgB,EAAE,KAAK;MAAE;MACzBC,eAAe,EAAE,KAAK;MAAE;MACxBC,YAAY,EAAE,IAAI,CAAE;IACtB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,gBAAgBA,CAACC,IAAI,EAAE;MACrB,IAAI,CAACN,YAAW,GAAIM,IAAI,EAAE;MAC1B,IAAI,CAACL,gBAAe,GAAI,IAAI,EAAE;IAChC,CAAC;IACDM,iBAAiBA,CAA